# ==============================
# NEXT.JS SETTINGS
# ==============================

# Environment setting
NODE_ENV=development

# NextAuth.js configuration
NEXTAUTH_URL=https://localhost:3000
NEXTAUTH_SESSION_SECRET=session-secret
NEXTAUTH_JWT_SECRET=jwt-secret
NEXTAUTH_SESSION_MAX_AGE=86400

# ==============================
# OAUTH CONFIGURATION
# ==============================

# Google OAuth credentials
GOOGLE_CLIENT_ID=google-id
GOOGLE_CLIENT_SECRET=google-secret

# Facebook OAuth credentials
FACEBOOK_CLIENT_ID=facebook-id
FACEBOOK_CLIENT_SECRET=facebook-secret

# GitHub OAuth credentials
GITHUB_CLIENT_ID=github-id
GITHUB_CLIENT_SECRET=github-secret

# Twitter OAuth credentials (v1.0a)
TWITTER_V1_CLIENT_ID=twitter-id
TWITTER_V1_CLIENT_SECRET=twitter-secret

# Twitter OAuth credentials (v2.0)
TWITTER_CLIENT_ID=twitter-id
TWITTER_CLIENT_SECRET=twitter-secret

# Backend API Base URL
BACKEND_API_BASE=http://example.com:8000/api
